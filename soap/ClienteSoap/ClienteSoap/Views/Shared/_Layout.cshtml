<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Web Service Soap</title>
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/estilos.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="container-fluid bg-teal">
        <nav class="navbar navbar-expand-lg navbar-dark ">
            <div class="container">
                <div class="row pl-2">
                    @Html.ActionLink("Web Services", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Menu">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse justify-content-center collapse" id="navbar">
                    <div class="row d-flex">
                        <ul class="navbar-nav ">
                            <li class="nav-item nav-hover">
                                @Html.ActionLink("Inicio", "Index", "Home", new { @class = "text-white text-decoration-none float-left nav-link mx-2" })
                            </li>
                            <li class="nav-item nav-hover">
                                @Html.ActionLink("Rut", "Rut", "Home", new { @class = "text-white text-decoration-none float-left nav-link mx-2 " })
                            </li>
                            <li class="nav-item nav-hover">
                                @Html.ActionLink("Saludo", "Saludo", "Home", new { @class = "text-white text-decoration-none float-left nav-link  mx-2 " })
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </div>

